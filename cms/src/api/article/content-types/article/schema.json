{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "industry",
        "company",
        "career"
      ]
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "minLength": 30,
      "maxLength": 120
    },
    "stats": {
      "type": "enumeration",
      "enum": [
        "draft",
        "review",
        "published",
        "archived"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles",
      "required": true
    },
    "featured": {
      "type": "boolean"
    },
    "seo": {
      "type": "component",
      "component": "article.seo",
      "repeatable": false
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "article.summary-card",
        "article.rich-text",
        "article.markdown",
        "article.pros-con",
        "article.link-card",
        "article.link-card-item",
        "article.image",
        "article.heading",
        "article.cta",
        "article.comparison-table",
        "article.callout",
        "article.blocks"
      ],
      "required": true
    },
    "manualRelatedArticles": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article.article"
    }
  }
}
